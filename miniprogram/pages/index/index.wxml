<login-avatar bind:login="onLogin"></login-avatar>

<view class="question">

  <view class="flex-container flex-justify-space flex-wrap" style="margin-bottom: 15px;">

    <div style= class="flex-g1" style="min-width: 150px; padding-top: 20px;">
      <text style="padding: 0 10px 0 10px" class="fa fa-paperclip"></text>
      题目编号 {{questionID}}
    </div>

    <div style="padding-top: 20px;">
        <text style="padding: 0 5px 0 5px; color: red" class="fa fa-heart"></text>
        提问者曾参与过 6 次打赏，赏金共 20 元。 
    </div>

  </view>

  <photo url="https://6761-ga6840-zk2qr-1301008873.tcb.qcloud.la/photos/test.jpg?sign=86a7fea5b8f5281469c18ddbfc783588&t=1578405336"/>

  <view class="footnote">编辑于 2019 年 12 月 27 日</view>

  <view id="taglist">
    <text style="padding: 0 10px 0 10px" class="fa fa-tags"></text>
    <view  class="tag">大学数学</view>
    <view  class="tag">数学分析</view>
    <view  class="tag">极限求值</view>
    <view  class="tag">+ 添加标签</view>
  </view>

  <view class="separator" />

  <view>打赏者列表</view>
  <view>贡献者列表</view>

  <view class="separator" />

  <comment-area class="comment-area" postid="{{questionID}}"
   loginName="{{loginName}}" loginAvatar="{{loginAvatar}}">
  </comment-area>

  <view class="flex-container flex-justify-between">
  
    <watch-button id="watchButton" bind:tap="onWatchBtnTap"
    labelOn="关注" labelOff="关注"
    iconOn="fa-eye" iconOff="fa-eye-slash"></watch-button>

    <watch-button id="starButton" 
    labelOn="收藏" labelOff="收藏"
    iconOn="fa-star" iconOff="fa-star-o"></watch-button>

    <watch-button id="awardButton"
    labelOn="打赏" labelOff="打赏"
    iconOn="fa-heart" iconOff="fa-heart-o"></watch-button>

    <div class="flex-container flex-justify-center">
      <div style="max-width: 300px; width: 90%">
        <button type="primary" style="width: 100%;">
          <text class="fa fa-camera-retro"></text> 拍照答题
        </button>
      </div>
    </div>
  </view>

</view>

<view class="flex-container flex-justify-center flex-direction-column">
  <view class="separator" />
  <view>注意，下面有解答。</view>
  <view>多多思考有助提高。</view>
  <view class="separator" />
  
</view>

<view class="answer">
  <button plain="true" bindtap="onTestNotification">测试关注通知</button>

  <view>用户头像</view>
  <view>折叠、删除(可针对某一段落)</view>
  <view>点赞、举报</view>
  <view>贡献手抄版</view>
  <view class="separator"/>
  <view>分享</view>
  <photo url="https://6761-ga6840-zk2qr-1301008873.tcb.qcloud.la/photos/test.jpg?sign=86a7fea5b8f5281469c18ddbfc783588&t=1578405336"/>

  <comment-area class="comment-area" postid="post12345"
   loginName="{{loginName}}" loginAvatar="{{loginAvatar}}">
  </comment-area>
</view>