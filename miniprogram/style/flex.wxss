.flex-container {
  display: flex;
  width: 100%;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-direction-column {
  flex-direction: column;
}

.flex-justify-space {
  justify-content: space-around;
  align-items: center;
}

.flex-justify-between {
  justify-content: space-between;
  align-items: center;
}

.flex-justify-end {
  justify-content: flex-end;
}

.flex-justify-center {
  justify-content: center;
  align-items: center;
}

.flex-justify-start {
  justify-content: flex-start;
}

.flex-test-item {
  border: 1px solid blueviolet;
}

.flex-g1 {
  flex: 1;
}

.flex-g2 {
  flex: 2;
}

.flex-g3 {
  flex: 3;
}