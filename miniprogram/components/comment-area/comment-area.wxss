@import "/style/flex.wxss";
@import "/style/theme.wxss";
@import "/style/fa-fontface.wxss";
@import "/style/fa-fontname.wxss";

.comment {
  border-top: 2px solid white;
  background-color: floralwhite;
  padding: 2px 0 3px 5px;
  word-break: break-all;
}

.comment-flags {
  min-width: 10px;
}

.flag {
  padding: 0 2px 0 2px;
}

.comment-user {
  color:cornflowerblue;
  font-weight: 800;
  text-align: center;
  padding-left: 4px;
  padding-right: 4px;
}

.comment-label {
  padding: 2px 0 3px 5px;
}

.comment-time {
  font-weight: 100;
  width: 160rpx;
  text-align: center;
  color: gainsboro;
}

.comment-editor {
  margin: 10px 0 10px 0;
}