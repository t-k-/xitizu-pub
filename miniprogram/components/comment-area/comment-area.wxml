<view class="comment-label">
  <text class="fa fa-comment-o"></text>
  <text> 评论：[回复、举报、赞同、踩]、[删除、修改]。展示剩下 13 条。</text>
</view>

<view>
  <view wx:for="{{comments[postid]}}" wx:key="timestamp"
    class="flex-container flex-justify-between flex-align-start comment">
    <view class="comment-user">
      {{item.openid[0].name}}
    </view>
    <view class="flex-g1">
      {{item.content}}
    </view>
    <view class="comment-flags">
      <text class="fa fa-flag"></text> 1
      <text class="fa fa-thumbs-o-up"></text> 3
    </view>
    <view class="comment-time">
      {{item.timestr}}
    </view>
  </view>
</view>

<view class="comment-editor">
  <comment-input id="comment-input" bind:submit="onCommentSubmit"
  placeholder="添加评论 ..." btnLabel="评论" postid="{{postid}}">
  </comment-input>
</view>